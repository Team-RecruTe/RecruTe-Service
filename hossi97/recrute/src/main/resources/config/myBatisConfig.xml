<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias alias="SignupDto" type="com.hossi.recrute.dto.request.SignupDto"/>
        <typeAlias alias="SigninDto" type="com.hossi.recrute.dto.request.SigninDto"/>
        <typeAlias alias="CheckDupDto" type="com.hossi.recrute.dto.request.CheckDupReqDto"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mapper/member.xml"/>
    </mappers>
</configuration>